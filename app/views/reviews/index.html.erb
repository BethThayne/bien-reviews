
<% content_for :page_title, "Homepage" %>


<nav class="filters">
<%= link_to "All restaurants", root_path %>

<div>
<%= link_to "€", root_path(price: 1, cuisine: @cuisine, location: @location) %>
<%= link_to "€€", root_path(price: 2, cuisine: @cuisine, location: @location) %>
<%= link_to "€€€", root_path(price: 3, cuisine: @cuisine, location: @location) %>
<%= link_to "€€€€", root_path(price: 4, cuisine: @cuisine, location: @location) %>
</div>

<div>
<%= link_to "European", root_path(cuisine: "European", price: @price, location: @location) %>
<%= link_to "Peruvian", root_path(cuisine: "Peruvian", price: @price, location: @location) %>
<%= link_to "Pizza", root_path(cuisine: "Pizza", price: @price, location: @location) %>
<%= link_to "Vegetarian/Vegan", root_path(cuisine: "Vegetarian/Vegan", price: @price, location: @location) %>
</div>

<form action="/">
    <input type="text" name="location" placeholder="Search location..." 
    value="<%= @location %>">

    <input type="hidden" name="price" value="<% @price %>">
    <input type="hidden" name="cuisine" value="<% @cuisine %>">

</form>

</nav>


<% @reviews.each do |review| %>


    <div class="review">
        <%= link_to review.title, review_path(review) %>

    </div>
<% end %>

